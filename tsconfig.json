{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/Projects/index.jsx",
    "src/components/Projects/components/project/index.jsx",
    "src/components/menu/menu.tsx",
    "src/components/Description/index.jsx",
    "src/components/Contact/index.jsx",
    "src/common/RoundedButton/index.jsx",
    "src/components/Header/index.jsx",
    "src/common/RoundedButton/RoundedButton.jsx",
    "src/common/Magnetic/index.jsx",
    "src/common/Magnetic/index.jsx"
  ],
  "exclude": ["node_modules"]
}
